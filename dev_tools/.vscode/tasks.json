{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build.sh",
            "options": {
                "shell": {
                    "executable": "nix-shell",
                    "args": ["--run"]
                }
            },
            "problemMatcher": ["$gcc"], // 可以根据实际情况选择合适的问题匹配器
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调用nix-shell执行build.sh脚本"
        }
    ]
}
